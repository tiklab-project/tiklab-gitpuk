	<profiles>

		<!--linux-->
		<profile>
			<id>system-linux</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<dependencies>
				<dependency>
					<groupId>io.tiklab</groupId>
					<artifactId>tiklab-jdk-linux</artifactId>
					<version>${tiklab-jdk.version}</version>
					<type>zip</type>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>io.tiklab</groupId>
					<artifactId>tiklab-postgresql-linux</artifactId>
					<version>${tiklab-postgresql.version}</version>
					<type>zip</type>
					<scope>provided</scope>
				</dependency>
			</dependencies>
			<properties>
				<assembly>linux</assembly>
				<systemType>linux</systemType>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>2.8</version>
						<executions>
							<execution>
								<id>unpack</id>
								<phase>compile</phase>
								<goals>
									<goal>unpack</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>io.tiklab</groupId>
											<artifactId>tiklab-postgresql-linux</artifactId>
											<version>${tiklab-postgresql.version}</version>
											<type>zip</type>
											<outputDirectory>embbed</outputDirectory>
										</artifactItem>
										<artifactItem>
											<groupId>io.tiklab</groupId>
											<artifactId>tiklab-jdk-linux</artifactId>
											<version>${tiklab-jdk.version}</version>
											<type>zip</type>
											<outputDirectory>embbed</outputDirectory>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

